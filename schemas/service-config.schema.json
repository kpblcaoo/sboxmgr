      "default": 8080,
      "description": "Port for health check endpoint",
      "title": "Health Check Port",
      "type": "integer"
    },
    "health_check_enabled": {
      "default": true,
      "description": "Enable health check endpoint",
      "title": "Health Check Enabled",
      "type": "boolean"
