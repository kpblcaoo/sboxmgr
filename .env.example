# Example .env for sboxmgr (sboxctl)
# Copy this file to .env and adjust as needed

# Main config and artifact paths
SBOXMGR_CONFIG_FILE=./config.json           # Path to main config file(default: /etc/sing-box/config.json)
SBOXMGR_TEMPLATE_FILE=./config.template.json # Path to config template(default: /etc/sing-box/config.json.bak)
SBOXMGR_LOG_FILE=./sboxmgr.log              # Path to log file
SBOXMGR_EXCLUSION_FILE=./exclusions.json    # Path to exclusions file
SBOXMGR_SELECTED_CONFIG_FILE=./selected_config.json # Path to selected config
SBOXMGR_BACKUP_FILE=./config.json.bak       # Path to backup config

# CLI and logic
SBOXMGR_URL=                                 # Proxy config URL (overrides CLI -u)
SINGBOX_URL=                                 # Legacy/compat: proxy config URL
TEST_URL=                                    # Used in tests for mock config
SBOXMGR_REMARKS=                             # Server remarks (optional)
SBOXMGR_INDEX=                               # Server index (optional)
SBOXMGR_PROXY=                               # Upstream proxy (optional)
SBOXMGR_DEBUG=1                              # Debug level (0=min, 1=info, 2=debug)
SBOXMGR_MAX_LOG_SIZE=1048576                 # Max log file size in bytes

# For test/mocking
MOCK_MANAGE_SERVICE=0                        # Set to 1 to mock service management in tests